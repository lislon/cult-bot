{
  "name": "bot",
  "version": "0.0.0",
  "private": true,
  "esm": true,
  "mode": "auto",
  "scripts": {
    "prod": "cross-env NODE_ENV=production node dist/bot.js",
    "dev": "cross-env NODE_ENV=development node dist/bot.js",
    "build": "npm run build-ts && npm run tslint",
    "build-dev": "npm run build-ts && node dist/bot.js",
    "watch-node": "nodemon dist/bot.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "npx jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "dbsync": "npx ts-node src/dbsync/run-dbsync.ts",
    "serve-debug": "nodemon --inspect dist/bot.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "db:sync": "node dist/dbsync/run-dbsync.js",
    "db:up": "db-migrate up",
    "db:down": "db-migrate down"
  },
  "dependencies": {
    "@types/parsimmon": "^1.10.2",
    "anymatch": "^3.1.1",
    "cross-env": "^7.0.2",
    "db-migrate": "^0.11.11",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^8.2.0",
    "googleapis": "^39.2.0",
    "moment": "^2.27.0",
    "parsimmon": "^1.16.0",
    "pg": "^8.3.2",
    "pg-promise": "^10.6.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "telegraf": "^3.38.0",
    "telegraf-i18n": "^6.6.0",
    "telegraf-ratelimit": "^2.0.0",
    "telegraf-update-logger": "^1.2.0",
    "winston": "^3.3.3",
    "xstate": "^4.13.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.12",
    "@types/node": "^14.6.0",
    "@types/pg": "^7.14.4",
    "@types/request-promise": "^4.1.46",
    "concurrently": "^5.3.0",
    "esm": "^3.2.25",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2"
  }
}
