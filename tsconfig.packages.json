{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "incremental": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "jsx": "react",
    "lib": [
      "es2020", "dom"
    ]
  }
}