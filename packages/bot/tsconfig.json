{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./",
    "typeRoots": [
      "../../node_modules/@types",
      "../../@types-global",
      "./node_modules/@types",
      "./src/@types"
    ],
    "outDir": "dist/",
    "declarationDir": "typings/",
    "tsBuildInfoFile": "typings/tsconfig.tsbuildinfo",
    "strictNullChecks": false
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["**/node_modules", "**/.*/", "dist/"]
}